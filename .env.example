# TCP listen port per node
TCP_PORT=7777
TCP_MAX_CONNECTIONS=50

# UDP multicast discovery
DISCOVERY_MULTICAST_ADDR=239.255.42.99
DISCOVERY_MULTICAST_PORT=6000
DISCOVERY_HELLO_INTERVAL_MS=30000
DISCOVERY_PEER_TIMEOUT_MS=90000

# TCP keepalive app-level
TCP_PING_INTERVAL_MS=15000

# Packet integrity key (dev)
HMAC_KEY=archipel-dev-key

# Optional AI (Sprint 4)
GEMINI_API_KEY=
ARCHIPEL_AI_ENABLED=false
